@model NexusCore.Admin.UILogic.ViewModels.Security.UserActivationViewModel

@{
    ViewBag.Title = "Setup Password";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="content">
    <!-- BEGIN Setup Password FORM -->
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login-form" }))
    {
        @Html.AntiForgeryToken()
        <h3 class="form-title">Login to your account</h3>
        <div class="alert alert-danger @string.Format("{0}", ViewData.ModelState.IsValid ? "display-hide" : "")">
            <button class="close" data-close="alert"></button>
            @Html.ValidationSummary(false, null, new { @class = "list-unstyled" })
        </div>
        <div class="form-group">
            <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
            @Html.LabelFor(m => m.Token, new { @class = "control-label visible-ie8 visible-ie9" })
            <div class="input-icon">
                <i class="fa fa-user"></i>
                @Html.TextBoxFor(m => m.Token, new { @class = "form-control placeholder-no-fix", disabled = true, placeholder = @Html.DisplayNameFor(m => m.Token) })
            </div>
        </div>
        <div class="form-group">
            <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
            @Html.LabelFor(m => m.NewPassword, new { @class = "control-label visible-ie8 visible-ie9" })
            <div class="input-icon">
                <i class="fa fa-user"></i>
                @Html.TextBoxFor(m => m.NewPassword, new { @class = "form-control placeholder-no-fix", placeholder = @Html.DisplayNameFor(m => m.NewPassword) })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label visible-ie8 visible-ie9">Password</label>
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label visible-ie8 visible-ie9" })
            <div class="input-icon">
                <i class="fa fa-lock"></i>
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control placeholder-no-fix", placeholder = @Html.DisplayNameFor(m => m.ConfirmPassword) })
            </div>
        </div>
        <div class="form-actions">
            <button type="submit" class="btn blue pull-right">
                Confirm <i class="m-icon-swapright m-icon-white"></i>
            </button>
        </div>
    }
    <!-- END Setup Password FORM -->
</div>
