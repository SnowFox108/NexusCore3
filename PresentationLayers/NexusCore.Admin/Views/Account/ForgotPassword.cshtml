@model NexusCore.Admin.UILogic.ViewModels.Security.UserForgetPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";    
}

<div class="content">
    <!-- BEGIN LOGIN FORM -->
    @using (Html.BeginForm("ForgotPassword", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login-form" }))
    {
        @Html.AntiForgeryToken()
        <h3 class="form-title">@ViewBag.Title</h3>
        <div class="alert alert-danger @string.Format("{0}", ViewData.ModelState.IsValid ? "display-hide" : "")">
            <button class="close" data-close="alert"></button>
            @Html.ValidationSummary(false, null, new { @class = "list-unstyled" })
        </div>
        <div class="form-group">
            <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
            @Html.LabelFor(m => m.Email, new { @class = "control-label visible-ie8 visible-ie9" })
            <div class="input-icon">
                <i class="fa fa-user"></i>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control placeholder-no-fix", placeholder = @Html.DisplayNameFor(m => m.Email) })
            </div>
        </div>
        <div class="form-actions">
            <label>
                @Html.ActionLink("Return to Login", "Login")
            </label>            
            <button type="submit" class="btn blue pull-right">
                Reset My Password <i class="m-icon-swapright m-icon-white"></i>
            </button>
        </div>
    }
    <!-- END LOGIN FORM -->
</div>
