</div>

<div class="row">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-user font-green-sharp"></i>
                    <span class="caption-subject font-green-sharp bold uppercase">Role Listing</span>
                    <span class="caption-helper">manage roles...</span>
                </div>
                <div class="tools">
                </div>
            </div>
            <div class="portlet-body flip-scroll">
                <div class="table-toolbar">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="btn-group">
                                <a href="@Url.Action("CreateRole")" class="btn green">
                                    Create New Role <i class="fa fa-plus"></i>
                                </a>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="btn-group pull-right">
                            </div>
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-bordered table-hover flip-content">
                    <thead class="flip-content">
                        <tr>
                            <th width="15%" class="sortable-column" ng-click="sortOrderSetPage('RoleName')">
                                Role Name <i class="fa pull-right" ng-class="table.RoleName"></i>
                            </th>
                            <th width="60%">
                                Description
                            </th>
                            <th width="5">
                                Type
                            </th>
                            <th width="20%">
                                Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="odd gradeX" ng-repeat="role in model.Roles">
                            <td>
                                {{ role.RoleName }}
                            </td>
                            <td>
                                {{ role.Description }}
                            </td>
                            <td>
                                <span class="label label-sm ng-class:role.type.Css">
                                    {{ role.type.Text }}
                                </span>                                
                            </td>
                            <td>
                                <a class="label label-primary label-sm" href="/RoleManager/EditRole/{{ role.Id }}" title="{{ role.RoleName }}"><i class="fa fa-pencil"></i> Edit</a>
                                <a class="label label-danger label-sm" href="" ng-click="deleteRole(role)" title="{{ role.RoleName }}" ng-hide="role.IsSystemRole"><i class="fa fa-trash"></i> Delete</a>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <div class="row">
                    @Html.Partial("/Views/Shared/BaseTemplates/_Pagination.cshtml")
                </div>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>

@section pageLevelScripts{
    <script src="/Angular/Controllers/role-manager-index.js"></script>
}